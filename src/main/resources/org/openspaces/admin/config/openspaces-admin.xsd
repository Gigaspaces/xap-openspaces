				<xsd:annotation>
					<xsd:documentation>Sets an external SLA definition location to be
						loaded.
					</xsd:documentation>
				</xsd:annotation>
			</xsd:attribute>

		</xsd:complexType>
	</xsd:element>

	<xsd:element name="memcached">
