<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:gs-core="http://www.openspaces.org/schema/core"
       xmlns:gs-events="http://www.openspaces.org/schema/events"
       xmlns:gs-remoting="http://www.openspaces.org/schema/remoting"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.openspaces.org/schema/core http://www.openspaces.org/schema/core/openspaces-core.xsd
       http://www.openspaces.org/schema/events http://www.openspaces.org/schema/events/openspaces-events.xsd
       http://www.openspaces.org/schema/remoting http://www.openspaces.org/schema/remoting/openspaces-remoting.xsd">

    <gs-core:giga-space-context/>

    <bean id="simpleFilter" class="org.openspaces.itest.core.space.filter.SimpleFilter" />

    <gs-core:space id="space" url="/./spaceSimpleFilter">
        <gs-core:space-filter>
            <gs-core:filter ref="simpleFilter" />
            <gs-core:operation code="0" />
            <gs-core:operation code="1" />
            <gs-core:operation code="2" />
            <gs-core:operation code="3" />
        </gs-core:space-filter>
    </gs-core:space>

    <gs-core:giga-space id="gigaSpace" space="space" />

</beans>