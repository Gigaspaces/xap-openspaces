<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">


    <bean id="space" class="org.openspaces.core.space.UrlSpaceFactoryBean">
        <property name="url" value="/./space"/>
    </bean>

    <bean id="txManager" class="org.openspaces.core.transaction.LocalTransactionManagerFactoryBean">
        <property name="space" ref="space"/>
    </bean>

    <bean id="gsTxManager" class="org.openspaces.core.transaction.GigaSpaceTransactionManager">
        <property name="transactionManager" ref="txManager"/>
    </bean>

    <bean id="gigaSpace" class="org.openspaces.core.GigaSpaceFactoryBean">
        <property name="space" ref="space"/>
        <property name="transactionManager" ref="gsTxManager"/>
    </bean>

</beans>