<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:os-core="http://www.openspaces.org/schema/core"
       xmlns:os-events="http://www.openspaces.org/schema/events"
       xmlns:os-remoting="http://www.openspaces.org/schema/remoting"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.openspaces.org/schema/core http://www.openspaces.org/schema/core/openspaces-core.xsd
       http://www.openspaces.org/schema/events http://www.openspaces.org/schema/events/openspaces-events.xsd
       http://www.openspaces.org/schema/remoting http://www.openspaces.org/schema/remoting/openspaces-remoting.xsd">

    <os-core:space id="space" url="/./spaceSimpleRemoting" />

    <os-core:giga-space id="gigaSpace" space="space" />

    <bean id="simpleServiceServer" class="org.openspaces.itest.remoting.simple.DefaultSimpleService" />

    <os-events:polling-container id="remotingContainer" giga-space="gigaSpace">
        <os-events:listener>
            <os-remoting:service-exporter>
                <os-remoting:service ref="simpleServiceServer"/>
            </os-remoting:service-exporter>
        </os-events:listener>
    </os-events:polling-container>


    <os-remoting:proxy id="simpleService" giga-space="gigaSpace"
                       interface="org.openspaces.itest.remoting.simple.SimpleService" timeout="15000" />

</beans>