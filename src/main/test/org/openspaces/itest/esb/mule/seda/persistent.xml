<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns="http://www.mulesource.org/schema/mule/core/2.0"
      xmlns:os-events="http://www.openspaces.org/schema/events"
      xmlns:os-core="http://www.openspaces.org/schema/core"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns:spring="http://www.springframework.org/schema/beans"
      xmlns:os-eventcontainer="http://www.openspaces.org/schema/mule/os-eventcontainer"
      xmlns:os-seda="http://www.openspaces.org/schema/mule/os-seda"
      xmlns:stdio="http://www.mulesource.org/schema/mule/stdio/2.0"
      xmlns:vm="http://www.mulesource.org/schema/mule/vm/2.0"

      xsi:schemaLocation="http://www.openspaces.org/schema/core http://www.openspaces.org/schema/core/openspaces-core.xsd
       http://www.openspaces.org/schema/events http://www.openspaces.org/schema/events/openspaces-events.xsd
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
       http://www.mulesource.org/schema/mule/core/2.0 http://www.mulesource.org/schema/mule/core/2.0/mule.xsd
       http://www.mulesource.org/schema/mule/stdio/2.0 http://www.mulesource.org/schema/mule/stdio/2.0/mule-stdio.xsd
       http://www.mulesource.org/schema/mule/vm/2.0 http://www.mulesource.org/schema/mule/vm/2.0/mule-vm.xsd
       http://www.openspaces.org/schema/mule mule-os-eventcontainer.xsd
       http://www.openspaces.org/schema/mule/os-seda http://www.openspaces.org/schema/mule/mule-os-seda.xsd">

    <spring:beans>
       <os-core:space id="space" url="/./muleSedaPersistent" schema="persistent" lookup-groups="${user.name}">
            <os-core:properties>
                <spring:props>
                    <!-- Properties that control the persistent schema -->
                    <spring:prop key="space-config.persistent.StorageAdapterClass">
                        com.j_spaces.sadapter.GenericJDBC.JDBCStorageAdapter
                    </spring:prop>
                    <spring:prop key="space-config.persistent.StorageAdapterURL">/GenericJDBCProperties/HSQLProperties</spring:prop>
                    <!-- override hsql default properties (found under jdbc.properties) -->
                    <spring:prop key="userName">sa</spring:prop>
                    <spring:prop key="password"></spring:prop>
                    <spring:prop key="connectionUrl">jdbc:hsqldb:mem:mule</spring:prop>
                </spring:props>
            </os-core:properties>
        </os-core:space>
        
        <os-core:giga-space id="gigaSpace" space="space"/>
    </spring:beans>

    <vm:connector name="vm" queueEvents="true"  />

    <os-seda:model name="helloSample" giga-space="gigaSpace" persistent="true">

        <os-seda:service name="Appender1" >

            <inbound>
                <vm:inbound-endpoint path="test1"/>
            </inbound>

            <component class="org.mule.component.simple.EchoComponent"/>

            <outbound>
                <outbound-pass-through-router>
                    <vm:outbound-endpoint path="test2"/>
                </outbound-pass-through-router>
            </outbound>

        </os-seda:service>

        <os-seda:service name="Appender2">

            <inbound>
                <vm:inbound-endpoint path="test2"/>
            </inbound>

            <component class="org.mule.component.simple.EchoComponent"/>

            <outbound>
                <outbound-pass-through-router>
                    <vm:outbound-endpoint path="test3"/>
                </outbound-pass-through-router>
            </outbound>

        </os-seda:service>

    </os-seda:model>

</mule>
