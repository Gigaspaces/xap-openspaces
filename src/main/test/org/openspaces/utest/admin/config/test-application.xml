<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:os-sla="http://www.openspaces.org/schema/sla"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd 
	                    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">

	<context:annotation-config />

	<bean class="org.openspaces.admin.application.config.ApplicationConfig">
		<property name="name" value="test-application" />
		<property name="processingUnits">
			<list value-type="org.openspaces.admin.pu.topology.ProcessingUnitConfigFactory">
				
 				<bean class="org.openspaces.admin.space.config.SpaceConfig">
					<property name="name" value="test-space" />
					
					<property name="deploymentDependencies">
						<list>
							<bean class="org.openspaces.admin.internal.pu.dependency.DefaultProcessingUnitDependency">
								<property name="requiredProcessingUnitName" value="test-pu"/>	
								<property name="waitForDeploymentToComplete" value="true"></property>		
							</bean>
						</list>
					</property>
					
				</bean>
				
				<bean class="org.openspaces.admin.pu.config.ProcessingUnitConfig">
					<property name="processingUnit" value="test-pu.jar" />
				</bean>
				
				
			</list>
		</property>
	</bean>

</beans>