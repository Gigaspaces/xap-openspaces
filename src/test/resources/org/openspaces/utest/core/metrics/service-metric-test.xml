<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:os-core="http://www.openspaces.org/schema/core"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
       http://www.openspaces.org/schema/core http://www.openspaces.org/schema/10.1/core/openspaces-core.xsd">

    <os-core:annotation-support/>

    <bean id="metricRegistrator" class="org.openspaces.utest.core.metrics.MockMetricRegistrator"/>

    <bean id="metricsPostProcessor" class="org.openspaces.core.metrics.ServiceMetricBeanPostProcessor">
        <constructor-arg ref="metricRegistrator"/>
    </bean>

    <bean id="myBean" class="org.openspaces.utest.core.metrics.MetricsBean"/>

</beans>