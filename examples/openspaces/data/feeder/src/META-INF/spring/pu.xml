<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:gs-core="http://www.openspaces.org/schema/core"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.openspaces.org/schema/core http://www.openspaces.org/schema/core/openspaces-core.xsd">

    <bean id="propertiesConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer"/>

    <gs-core:giga-space-context/>

    <gs-core:space id="space" url="jini://*/*/space" lookup-groups="${user.name}" />

    <gs-core:giga-space id="gigaSpace" space="space" />

    <bean id="dataFeeder" class="org.openspaces.example.data.feeder.DataFeeder"/>

    <!-- Remoting Example -->

    <bean id="dataProcessor" class="org.openspaces.remoting.SpaceRemotingProxyFactoryBean">
        <property name="gigaSpace" ref="gigaSpace"/>
        <property name="serviceInterface" value="org.openspaces.example.data.common.IDataProcessor"/>
        <property name="remoteRoutingHandler">
            <bean class="org.openspaces.example.data.feeder.support.DataRemoteRoutingHandler"/>
        </property>
        <property name="voidOneWay" value="true"/>
    </bean>

    <bean id="dataRemoting" class="org.openspaces.example.data.feeder.DataRemoting">
        <property name="dataProcessor" ref="dataProcessor"/>
    </bean>

    <!-- Local View Example ("client side") -->

    <gs-core:local-view id="processedViewSpace" space="space">
        <gs-core:view-query where="processed = true" class="org.openspaces.example.data.common.Data">
            <gs-core:template>
                <bean class="org.openspaces.example.data.common.Data" />
            </gs-core:template>
        </gs-core:view-query>
    </gs-core:local-view>

    <gs-core:giga-space id="processedViewGigaSpace" space="processedViewSpace"/>

    <bean id="viewDataCounter" class="org.openspaces.example.data.feeder.ViewDataCounter"/>

</beans>